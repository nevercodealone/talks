        min-height: 100vh;
        overflow-x: hidden;
      }

      .container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 60px 20px;
      }

      /* Header */
      header {
        text-align: center;
        margin-bottom: 80px;
        animation: fadeInDown 0.8s ease;
      }

      header img {
        max-width: 300px;
        height: auto;
        margin-bottom: 30px;
        filter: drop-shadow(0 10px 30px rgba(0,0,0,0.3));
      }

      .tagline {
        font-size: 1.5rem;
        font-weight: 300;
        margin-bottom: 30px;
        opacity: 0.8;
        color: #00ff41;
      }

      /* Social Links */
      .social-links {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin: 30px 0;
      }

      .social-links a {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 50px;
        height: 50px;
        background: rgba(0, 255, 65, 0.1);
        border-radius: 50%;
        color: #00ff41;
        font-size: 24px;
        text-decoration: none;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(0, 255, 65, 0.3);
      }

      .social-links a:hover {
        background: rgba(0, 255, 65, 0.2);
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 255, 65, 0.3);
        border-color: #00ff41;
      }

      /* Year Sections */
      .year-section {
        margin-bottom: 80px;
        animation: fadeInUp 0.8s ease;
        animation-fill-mode: both;
      }

      .year-section:nth-child(2) { animation-delay: 0.1s; }
      .year-section:nth-child(3) { animation-delay: 0.2s; }
      .year-section:nth-child(4) { animation-delay: 0.3s; }
      .year-section:nth-child(5) { animation-delay: 0.4s; }

      .year-header {
        display: flex;
        align-items: center;
        margin-bottom: 40px;
        gap: 20px;
      }

      .year-badge {
        background: rgba(0, 255, 65, 0.15);
        padding: 12px 35px;
        border-radius: 50px;
        font-size: 1.8rem;
        font-weight: bold;
        backdrop-filter: blur(10px);
        box-shadow: 0 5px 15px rgba(0, 255, 65, 0.2);
        white-space: nowrap;
        border: 2px solid rgba(0, 255, 65, 0.3);
        color: #00ff41;
      }

      .year-badge.evergreen {
        background: linear-gradient(135deg, #003b00 0%, #00ff41 100%);
        border-color: #00ff41;
      }

      .year-line {
        flex: 1;
        height: 2px;
        background: rgba(0, 255, 65, 0.3);
      }

      /* Talk Cards Grid */
      .talks-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 30px;
      }

      .talk-card {
        background: rgba(0, 255, 65, 0.05);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 35px;
        transition: all 0.3s ease;
        border: 1px solid rgba(0, 255, 65, 0.2);
        position: relative;
        overflow: hidden;
      }

      .talk-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #003b00, #00ff41);
        transform: scaleX(0);
        transition: transform 0.3s ease;
      }

      .talk-card:hover::before {
        transform: scaleX(1);
      }

      .talk-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0, 255, 65, 0.3);
        background: rgba(0, 255, 65, 0.1);
        border-color: #00ff41;
      }

      .talk-title {
        font-size: 1.6rem;
        font-weight: 600;
        margin-bottom: 15px;
        color: #00ff41;
      }

      .talk-description {
        font-size: 1rem;
        opacity: 0.7;
        line-height: 1.7;
        margin-bottom: 25px;
        color: #00ff41;
      }

      .talk-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: #00ff41;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
        font-size: 1rem;
      }

      .talk-link:hover {
        gap: 12px;
        text-shadow: 0 0 10px rgba(0, 255, 65, 0.8);
      }

      .talk-link::after {
        content: '→';
        font-size: 1.3rem;
      }

      /* Footer */
      footer {
        text-align: center;
        padding: 60px 20px 40px;
        opacity: 0.6;
        font-size: 0.95rem;
        border-top: 1px solid rgba(0, 255, 65, 0.2);
        margin-top: 60px;
        color: #00ff41;
      }

      /* Animations */
      @keyframes fadeInDown {
        from {
          opacity: 0;
          transform: translateY(-30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      /* Responsive */
      @media (max-width: 768px) {
        .talks-grid {
          grid-template-columns: 1fr;
        }

        header img {
          max-width: 200px;
        }

        .tagline {
